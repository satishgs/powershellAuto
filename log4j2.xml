<Appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="%highlight{%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] %c{1.} - %msg%n}{FATAL=red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue}"/>
    </Console>
</Appenders>

<Loggers>
<Root level="INFO">
    <AppenderRef ref="Console"/>
</Root>
</Loggers>
